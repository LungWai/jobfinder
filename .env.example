# Database Configuration
DATABASE_URL="postgresql://jobfinder:jobfinder123@localhost:5432/hk_job_scraper"

# Server Configuration
PORT=3001
NODE_ENV=development

# Authentication Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_SECRET=your-refresh-secret-change-this-in-production
REFRESH_TOKEN_EXPIRY=604800000

# Password Configuration
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@jobfinder.com
EMAIL_FROM_NAME=JobFinder
ENABLE_EMAIL=false

# Email Template Configuration
EMAIL_PREVIEW=true
EMAIL_SEND_IN_DEVELOPMENT=false

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Security Configuration
REQUIRE_EMAIL_VERIFICATION=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_TIMEOUT=3600000
REMEMBER_ME_DURATION=2592000000
SESSION_SECRET=your-session-secret-change-this-in-production

# Token Expiry Configuration
VERIFICATION_TOKEN_EXPIRY=86400000
PASSWORD_RESET_TOKEN_EXPIRY=3600000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=/auth/google/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=/auth/github/callback

LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_CALLBACK_URL=/auth/linkedin/callback

# Two-Factor Authentication (optional)
ENABLE_TWO_FACTOR=false
TWO_FACTOR_ISSUER=JobFinder
TWO_FACTOR_WINDOW=1
BACKUP_CODES_COUNT=10
QR_CODE_SIZE=200

# API Keys (optional)
ENABLE_API_KEYS=false