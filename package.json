{
  "name": "hk-job-scraper",
  "version": "1.0.0",
  "description": "Web application for scraping and displaying job listings from Hong Kong job portals",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "start": "node dist/server.js",
    "scrape": "tsx src/scripts/scrape.ts",
    "seed": "tsx src/scripts/seed-jobs.ts",
    "setup": "tsx src/scripts/setup-database.ts",
    "test:setup": "tsx src/scripts/test-setup.ts",
    "test:scrapers": "tsx src/scripts/test-scrapers.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "tsx src/scripts/seed-jobs.ts",
    "db:studio": "prisma studio"
  },
  "keywords": ["job-scraper", "hong-kong", "web-scraping", "react", "nodejs"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "pg": "^8.11.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "playwright": "^1.40.1",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-session": "^1.17.3",
    "nodemailer": "^6.9.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/express-session": "^1.17.10",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "prisma": "^5.7.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "tsx src/scripts/seed-jobs.ts"
  }
}
