{
  "name": "hk-job-scraper",
  "version": "1.0.0",
  "description": "Web application for scraping and displaying job listings from Hong Kong job portals",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "start": "node dist/server.js",
    "scrape": "tsx src/scripts/scrape.ts",
    "seed": "tsx src/scripts/seed-jobs.ts",
    "setup": "tsx src/scripts/setup-database.ts",
    "test:setup": "tsx src/scripts/test-setup.ts",
    "test:scrapers": "tsx src/scripts/test-scrapers.ts",
    "test:email": "tsx src/scripts/test-email.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "tsx src/scripts/seed-jobs.ts",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "job-scraper",
    "hong-kong",
    "web-scraping",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@prisma/client": "^5.7.1",
    "@tanstack/react-query": "^5.81.5",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "bull-board": "^1.7.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "email-templates": "^12.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "pg": "^8.11.3",
    "playwright": "^1.40.1",
    "pug": "^3.0.3",
    "react-hook-form": "^7.60.0",
    "redis": "^5.6.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "concurrently": "^8.2.2",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "tsx src/scripts/seed-jobs.ts"
  }
}
